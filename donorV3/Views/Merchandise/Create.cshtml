@model VOA.Models.Merchandise

@{
    ViewBag.Title = "Merchandise Administration - Add Merchandise";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Display breadcrump bar for Merchandise Administration -->
<div class="page-header"><h1>Merchandise Administration - Add Merchandise</h1></div>
<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/Merchandise">Merchandise List</a></li>
    <li class="active">Add Merchandise</li>
</ol>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-lg-6">
        <div class="form-group">
            <label>Merchandise Name:</label>
            <input name="Name" class="form-control" type="text" placeholder="Merchandise Name" autofocus>
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>

        <div class="col-lg-6">
            <div class="form-group">
                <label>Enabled:</label>
                @Html.EditorFor(model => model.Active)
                @Html.ValidationMessageFor(model => model.Active)
            </div>
        </div>

        <div class="col-lg-12 form-group">
            <button type="submit" class="btn btn-primary">Save New Merchandise</button>
            <button type="reset" class="btn btn-link">Reset</button>
            <a href="/Merchandise" class="btn btn-link">Cancel</a>
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
