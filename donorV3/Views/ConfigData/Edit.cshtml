@model VOA.Models.ConfigData

@{
    ViewBag.Title = "Configuration Settings - Edit Setting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Display breadcrump bar for Configuration Settings -->
<div class="page-header"><h1>Configuration Settings - Edit Setting</h1></div>
<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/ConfigData">Configuration Settings</a></li>
    <li class="active">Edit Setting (@Model.ID)</li>
</ol>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="col-lg-6">
            <div class="form-group">
                <label>Parameter:</label>
                <input name="ID" class="form-control" type="text" value="@Model.ID" placeholder="Parameter" readonly autofocus>
                @Html.ValidationMessageFor(model => model.ID)
            </div>
        </div>

        <div class="col-lg-6">
            <div class="form-group">
                <label>Value:</label>
                <input name="Value" class="form-control" type="text" value="@Model.Value" placeholder="Value">
                @Html.ValidationMessageFor(model => model.Value)
            </div>
        </div>

        <div class="col-lg-12 form-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="/ConfigData" class="btn btn-link">Cancel</a>
        </div>
    </div>
}
