@model IEnumerable<VOA.Models.ConfigData>

@{
    ViewBag.Title = "Configuration Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Display breadcrump bar for Configuration Data -->
<div class="page-header"><h1>Configuration Settings</h1></div>
<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Configuration Settings</li>
</ol>

<table class="table">
    <tr>
        <th>
            Actions
        </th>
        <th>
            Parameter
        </th>
        <th>
            Values
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <div class="btn-group">
                <a class="btn-sm" style="padding: 5px 5px;" href="/ConfigData/Edit/@Html.DisplayFor(modelItem => item.ID)">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>                
            </div>     
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>        
    </tr>
}

</table>
