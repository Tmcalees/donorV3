@model IEnumerable<DateTime>

@{
    ViewBag.Title = "Schedule Donation - Select Pickup Date";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Display breadcrump bar for Schedule Donation Pickup wizard -->
<div class="page-header"><h1>Schedule Donation Pickup - Select Pickup Date</h1></div>
<ol class="breadcrumb">
    <li><a href="~/Home">Home</a></li>
    <li><a href="~/Pickup">Search for Donor</a></li>
    <li><a href="~/Pickup/SearchDonor">Select Donor</a></li>
    <li class="active">Select Pickup Date</li>
</ol>

<!-- Display list of possible pickup dates -->
<form class="container" action="~/Pickup/SelectMerchandise">    
    @foreach (var item in Model)
    {
        <div class="col-lg-6" style="padding-bottom: 2px;">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-chevron-right"></span></button>
                </span>
                <span class="form-control">
                    @item.DayOfWeek, @item.ToString("MMMM"), @item.Day, @item.Year
                </span>
            </div>
        </div>    
    }
</form>
